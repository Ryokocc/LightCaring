<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--框-->
    <item>
        <shape
            android:shape="rectangle">
            <!--渐变-->
            <gradient android:startColor="@color/blue"
                      android:endColor="#CCCCCCCC" android:type="radial" android:angle="90"
                      android:gradientRadius="15dp"
                      android:centerX="0.5" android:centerY="0.5" />
            <corners android:radius="3dp"/>
            <size
                android:width="16dp"
                android:height="16dp"/>
        </shape>
    </item>
    <!--矩形-->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size
                android:width="16dp"
                android:height="16dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_track"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
    </item>
</layer-list>