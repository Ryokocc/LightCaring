<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape
            android:shape="oval"
            android:useLevel="false"
            android:thickness="10dp">

            <!--渐变-->
            <gradient android:startColor="@color/blue"
                      android:endColor="@color/white" android:type="radial" android:angle="90"
                      android:gradientRadius="15dp"
                      android:centerX="0.5" android:centerY="0.5" />
            <!-- 应该是圆角 -->
            <corners android:radius="5dp" />
            <size android:width="15dp"
                  android:height="15dp" />
        </shape>
    </item>

</selector>