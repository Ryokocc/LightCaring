<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="专业扫地上门服务"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="本人专人承接屋顶阳台清理工作，已有22年工作历史"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TableRow>

                            <TextView
                                android:text="姓名："/>

                            <TextView
                                android:id="@+id/servant_name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="王二狗"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="电话："/>
                            <TextView
                                android:id="@+id/servant_phone"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="13399669966"/>
                        </TableRow>


                        <TableRow>

                            <TextView
                                android:text="价格："/>

                            <TextView
                                android:id="@+id/service_price"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="100元/次"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="地区："/>

                            <TextView
                                android:id="@+id/service_area"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="桂林电子科技大学花江校区22栋"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_gravity="center"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/service_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/about_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
